<head>
  <title>ImpressJsApp</title>
  <%= stylesheet_link_tag  "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>


<body class="home">
  <div class="header">
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">  
           <a class="brand" href=""> Impress Lab</a>
            <ul class="nav">
              <li class="active">
                <a href="/index.html">Build</a>
              </li>
              <li class="">
                <a href="">Components for developers</a>
              </li>
              <li class="">
                <a href="./customize.html">Customize</a>
              </li>
            </ul>
        </div>
      </div>
    </div>
  </div>


  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span2 ">
         <p class="controller">Number of slides </p>
        <button type="button" id="decrement_slide" class="btn btn-primary"> - </button>
        <input class="input-mini" type="text" id="num_slides" placeholder="9" value="9" >
        <button type="button" id="addslide" class="btn btn-primary"> + </button>
  

      <div class="separator"></div>

       <p  class="controller">Choose the slides shape </p>

        <div class="btn-group" data-toggle="buttons-radio">
           <button type="button" id="rectangle"  class="active layout-button btn btn-primary" 
          value="rectangle">
            Rectangle
          </button>
          <button type="button" id="circle" class="layout-button btn btn-primary" 
          value="circle">
            Circle
          </button>
           <button type="button" id="blank" class="layout-button btn btn-primary" 
          value="blank">
            Blank
          </button>
         
        </div>

       <div class="separator"></div>

         <p  class="controller"> What kind of layout do you want? </p>

        <div class="btn-group" data-toggle="buttons-radio">
          <button type="button" id="vertical" class="active layout-btn btn btn-primary" 
          value="vertical">
            Vertical
          </button>
          <button type="button" id="linear"  class="layout-btn btn btn-primary" 
          value="linear">
            Linear
          </button>
           <br>
      <!--      <button type="button" id="lineargrid"  class="layout-btn btn btn-primary" 
          value="lineargrid">
            Linear Grid
          </button> -->
          
           <button type="button" id="circlev1"  class="layout-btn btn btn-primary" 
          value="circlev1">
            Circle I
          </button>
           <button type="button" id="circlev2"  class="layout-btn btn btn-primary" 
          value="circlev2">
            Circle II
          </button>
           <br>
         
          <button type="button" id="circlev3"  class="layout-btn btn btn-primary" 
          value="circlev3">
            Circle III
          </button>
           <button type="button" id="circlev4"  class="layout-btn btn btn-primary" 
          value="circlev4">
            Circle IV
          </button>
          <br>
          
           <button type="button" id="verticalgrid"  class="layout-btn btn btn-primary" 
          value="verticalgrid">
            Vertical Grid
          </button>
          <button type="button" id="snakegrid"  class="layout-btn btn btn-primary" 
          value="snakegrid">
            Snake Grid
          </button>
         
           <br>
           <button type="button" id="deep"  class="layout-btn btn btn-primary" 
          value="deep">
            Deep
          </button>
            <button type="button" id="chain"  class="layout-btn btn btn-primary" 
          value="chain">
            Chain
          </button>
           <br>
         
         
        </div>

         <div class="separator"></div>
  
      <p class="controller">
          What kind of theme do you want? </p>
        <div class="btn-group" data-toggle="buttons-radio">
          <button type="button" id="basic" class="active  btn btn-primary" 
          value="basic">
            Basic
          </button>
          <button type="button" id="textured"  class=" btn btn-primary" 
          value="textured">
            Textured
          </button>
        </div>

      <div class="separator"></div>
  
      <p class="controller">
          Do you need progress bar? </p>
        <div class="btn-group" data-toggle="buttons-radio">
          <button type="button" id="no-pbar" class="active btn btn-primary" 
          value="no-pbar">
            No
          </button>
          <button type="button" id="pbar1"  class="btn btn-primary" 
          value="pbar1">
            Yes
          </button>
        </div>

         <div class="separator"></div>
 
     <p class="controller"> Do you want automatated presentation</p>
        <div class="btn-group" data-toggle="buttons-radio">
           <button type="button" id="noauto"  class="active  btn btn-primary">
            No
          </button>
          <button type="button" id="auto" class="layout-button btn btn-primary">
            Yes
          </button>        
        </div>
   <div class="separator"></div>
        <p class="controller">Do you want to use substeps?</p>
      <div class="btn-group" data-toggle="buttons-radio">
      <button type="button" id="nosubsteps"  class="active layout-button btn btn-primary">
          No
        </button>
        <button type="button" id="substeps" class="layout-button btn btn-primary">
          Yes
        </button>
        
      </div>
         <div class="separator"></div>

       <div class="separator"></div>
      <button id="download" type="button" class="btn btn-large">
        Download Zip
      </button>
      <div class="separator"></div>

   <script>
    document.addEventListener('click', updatePreview, false);  
    document.addEventListener("keydown", function ( event ) {
        if ( event.keyCode === 9 || ( event.keyCode >= 32 && event.keyCode <= 34 ) || (event.keyCode >= 37 && event.keyCode <= 40) ){ setFocusOnIframe();} }, false); 
  </script>
      </div>


    <div class="span10">
      <iframe src="/presentation" id="preview" />
    </div>
  </div>
</div>


 
  
 
  



</body>
