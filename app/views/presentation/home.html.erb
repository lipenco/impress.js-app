  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span2 ">
         <p class="controller">Number of slides </p>
        <input class="input-mini" type="text" id="num_slides" placeholder="number">

      <div class="separator"></div>

       <p  class="controller">Choose the slides shape </p>

        <div class="btn-group" data-toggle="buttons-radio">
          <button type="button" id="circle" class="layout-button btn btn-primary" 
          value="circle">
            Circle
          </button>
          <button type="button" id="rectangle"  class="layout-button btn btn-primary" 
          value="rectangle">
            Rectangle
          </button>
        </div>

       <div class="separator"></div>

         <p  class="controller"> What kind of layout do you want? </p>

        <div class="btn-group" data-toggle="buttons-radio">
          <button type="button" id="vertical" class="layout-button btn btn-primary" 
          value="vertical">
            Vertical
          </button>
          <button type="button" id="linear"  class="layout-button btn btn-primary" 
          value="linear">
            Linear
          </button>
          <button type="button" id="circle"  class="layout-button btn btn-primary" 
          value="circle">
            Circle
          </button>
        </div>

         <div class="separator"></div>
  
      <p class="controller">
          What kind of theme do you want? </p>
        <div class="btn-group" data-toggle="buttons-radio">
          <button type="button" id="basic" class="layout-button btn btn-primary" 
          value="basic">
            Basic
          </button>
          <button type="button" id="textured"  class="layout-button btn btn-primary" 
          value="textured">
            Textured
          </button>
        </div>

         <div class="separator"></div>
 
     <p class="controller"> Do you want automatated presentation</p>
        <div class="btn-group" data-toggle="buttons-radio">
          <button type="button" id="auto" class="layout-button btn btn-primary">
            Yes
          </button>
          <button type="button" id="noauto"  class="layout-button btn btn-primary">
            No
          </button>
        </div>
   <div class="separator"></div>
        <p class="controller">Do you want tu use substeps?</p>
      <div class="btn-group" data-toggle="buttons-radio">
        <button type="button" id="substeps" class="layout-button btn btn-primary">
          Yes
        </button>
        <button type="button" id="nosubsteps"  class="layout-button btn btn-primary">
          No
        </button>
      </div>
         <div class="separator"></div>

      <button id="generator" type="button" class="btn btn-large">
        Generate Preview
      </button>
       <div class="separator"></div>
      <button id="download" type="button" class="btn btn-large">
        Download Zip
      </button>
      <div class="separator"></div>

   <script>
    var generator = document.getElementById('generator');
    generator.addEventListener('click', updatePreview, false);    
  </script>
      </div>


    <div class="span10">
      <iframe src="/presentation" id="preview" />
    </div>
  </div>
</div>


 
  
 
  



